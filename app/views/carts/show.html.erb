<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<div class="cart_title">Your shopping cart</div>
<table>
  <% @cart.line_items.each do |item| %>
    <tr>
      <td>
        <select name="qty">
          <% @qty.each do |u| %>
            <% if u === item.qty %>
              <option value="<%= u %>" selected="<%= item.qty %>"><%= u %></option>
            <% else %>
              <option value="<%= u %>"><%= u %></option>
            <% end %>
          <% end %>
        </select>
      </td>
      <%= form_for item do |f| %>
        <td><%= f.text_field :qty, value: item.qty %></td>
        <td><%= f.submit 'Update Qty' %></td>
      <% end %>
      <td><%= item.qty %> &times;</td>
      <td><%= item.product.name %></td>
      <td class="item_price"><%= number_to_currency(item.total_price) %></td>
      <td><%= button_to 'Delete Item', item, method: :delete, confirm: 'Are you sure?' %></td>
    </tr>
  <% end %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>

<%= button_to 'Empty cart', @cart, method: :delete, confirm: "Are you sure?" %>
